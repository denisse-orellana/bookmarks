<tr id="bookmark-<% bookmark.id %>">
    <td><%= bookmark.id %></td>
    <td><%= bookmark.title %></td>
    <td><%= bookmark.url %></td>
    <td><%= bookmark.category %></td>
    <td><%= bookmark.type %></td>
    <div class="container">
        <td><%= link_to bookmark, remote: true, class: 'btn btn-success' do fa_icon "eye 2x" end  %></td>
        <td><%= link_to edit_bookmark_path(bookmark), remote: true, class: 'btn btn-warning' do fa_icon "edit 2x" end  %></td>
        <td><%= link_to bookmark, method: :delete, remote: true, data: { confirm: "Are you sure to delete: #{bookmark.title} ?" }, class: 'btn btn-danger' do fa_icon "trash 2x" end  %></td>    
    </div>
</tr>