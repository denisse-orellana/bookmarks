<h1>Bookmark Categories </h1>

<table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Is public?</th>
        <th scope="col">SubCategory</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= category.visibility %></td>
            <td><%= category.category_id %></td>
            <td><%= link_to category, class: 'btn btn-success' do fa_icon "eye 2x" end %></td>
            <td><%= link_to edit_category_path(category), class: 'btn btn-warning' do fa_icon "edit 2x" end %></td>
            <td><%= link_to category, method: :delete, data: { confirm: "Are you sure to delete?" }, class: 'btn btn-danger' do fa_icon "trash 2x" end %></td>
        </tr>
      <% end %>
    </tbody>
</table>

<div class="container py-5">
  <%= link_to 'New category', new_category_path , class: 'btn btn-outline-info btn-lg' %> 
  <%= link_to 'Back', bookmarks_path, class: 'btn btn-outline-dark btn-lg' %>
</div>